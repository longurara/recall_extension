{
  "manifest_version": 3,
  "name": "Recall - Web Page Snapshots",
  "version": "1.0.0",
  "description": "Auto-save & recall web pages. View snapshots anytime, even offline.",
  "permissions": [
    "pageCapture",
    "scripting",
    "activeTab",
    "tabs",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "sidePanel",
    "contextMenus",
    "offscreen",
    "debugger",
    "downloads",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/progressive-capture.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/snapshot.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/spotlight.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/you-were-here.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/clipper.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "action": {
    "default_title": "Recall - Web Page Snapshots",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "sandbox": {
    "pages": [
      "viewer/sandbox.html"
    ]
  },
  "commands": {
    "capture-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture current page snapshot"
    },
    "open-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Open Recall Manager"
    },
    "toggle-spotlight": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Open Recall Spotlight Search"
    },
    "read-later": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Save current page to Read Later"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}